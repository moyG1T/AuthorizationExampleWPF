<Page x:Class="AuthorizationPage.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuthorizationPage.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="Authorization">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox x:Name="LoginBox"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Пароль</TextBlock>
                <PasswordBox x:Name="PasswordBox"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ToRegistButton" Click="ToRegistButton_Click">Регистрация</Button>
                <Button x:Name="ToLoginButton" Click="ToLoginButton_Click" Background="Orange" Foreground="White">Войти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
